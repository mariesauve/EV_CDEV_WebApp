<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg " style="background-color:lightpink; opacity:.8 ;" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" style="color:darkslateblue" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01" >
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" style="color:darkslateblue">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:darkslateblue">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:darkslateblue">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" style="color:darkslateblue">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" style="color:darkslateblue">Dropdown</a>
                            <div class="dropdown-menu" style="color:darkslateblue">
                                <a class="dropdown-item" href="#" style="color:darkslateblue">Action</a>
                                <a class="dropdown-item" href="#" style="color:darkslateblue">Another action</a>
                                <a class="dropdown-item" href="#" style="color:darkslateblue">Something else here</a>
                                <div class="dropdown-divider" style="color:darkslateblue"></div>
                                <a class="dropdown-item" href="#" style="color:darkslateblue">Separated link</a>
                            </div>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search" >
                        <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit" style="color:darkslateblue">Search</button>
                    </form> 
                    <br />
                    <partial name="_LoginPartial" />
                </div>
               
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>